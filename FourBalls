void setup() {
  size(500,500);
  background(255);
}

void draw() {
  background(255);
  
  fill(255,255,0);
  ellipse(mouseX+15, mouseY+15, 20, 20);
  fill(0,255,0);
  ellipse(mouseX-15, mouseY+15, 20, 20);
  fill(255,255,0);
  ellipse(mouseX+15, mouseY-15, 20, 20);
  fill(0,255,0);
  ellipse(mouseX-15, mouseY-15, 20, 20);
}
